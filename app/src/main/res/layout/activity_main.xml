<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/num_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_default_text"
        android:textColor="#FF0000"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/num_min"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/num_min"
        app:layout_constraintTop_toBottomOf="@+id/num_min"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/num_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_default_text"
        android:textColor="#FF0000"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/num_hour"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/num_hour"
        app:layout_constraintTop_toBottomOf="@+id/num_hour" />

    <TextView
        android:id="@+id/num_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_default_text"
        android:textColor="#FF0000"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/num_day"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="@+id/num_day"
        app:layout_constraintTop_toBottomOf="@+id/num_day" />

    <TextView
        android:id="@+id/num_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_default_text"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/num_year"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/num_year"
        app:layout_constraintTop_toBottomOf="@+id/num_year" />

    <TextView
        android:id="@+id/Day"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/day_text"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/num_day"
        app:layout_constraintTop_toTopOf="@+id/num_day"
        app:layout_constraintVertical_bias="0.743" />

    <TextView
        android:id="@+id/Sec"
        android:layout_width="28dp"
        android:layout_height="17dp"
        android:text="@string/second_text"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/num_sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toEndOf="@+id/num_sec"
        app:layout_constraintTop_toTopOf="@+id/num_sec"
        app:layout_constraintVertical_bias="0.711" />

    <TextView
        android:id="@+id/Hour"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/hour_text"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/num_hour"
        app:layout_constraintTop_toTopOf="@+id/num_hour"
        app:layout_constraintVertical_bias="0.697" />

    <TextView
        android:id="@+id/Min"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/minutes_text"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num_sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/num_min"
        app:layout_constraintTop_toTopOf="@+id/num_min"
        app:layout_constraintVertical_bias="0.706" />

    <TextView
        android:id="@+id/Year"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:text="@string/years_text"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/num_year"
        app:layout_constraintTop_toTopOf="@+id/num_year"
        app:layout_constraintVertical_bias="0.743" />

    <TextView
        android:id="@+id/num_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/number_default_text"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>